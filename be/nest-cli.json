{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/be/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/be/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/shortlink",
  "projects": {
    "libs": {
      "type": "library",
      "root": "libs/libs",
      "entryFile": "index",
      "sourceRoot": "libs/libs/src",
      "compilerOptions": {
        "tsConfigPath": "libs/libs/tsconfig.lib.json"
      }
    },
    "shortlink": {
      "type": "application",
      "root": "apps/shortlink",
      "entryFile": "main",
      "sourceRoot": "apps/shortlink/src",
      "compilerOptions": {
        "tsConfigPath": "apps/shortlink/tsconfig.app.json"
      }
    }
  }
}